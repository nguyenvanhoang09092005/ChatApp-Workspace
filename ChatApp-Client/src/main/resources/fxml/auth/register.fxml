<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="900.0" styleClass="root" stylesheets="@../../css/auth/login.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.chatappclient.client.controllers.auth.RegisterController">

    <!-- Left Side - Image/Branding -->
    <left>
        <VBox alignment="CENTER" prefHeight="700.0" prefWidth="436.0" styleClass="left-panel">
            <VBox alignment="CENTER" spacing="20">
                <Label styleClass="brand-title" text="ChatApp">
                    <font>
                        <Font name="System Bold" size="48.0" />
                    </font>
                </Label>
                <Label styleClass="brand-subtitle" text="Tham gia cộng đồng">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
            </VBox>
        </VBox>
    </left>

    <!-- Right Side - Register Form -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <VBox alignment="TOP_CENTER" spacing="15" styleClass="form-container">
                <padding>
                    <Insets bottom="40" left="50" right="50" top="40" />
                </padding>

                <!-- Title -->
                <VBox alignment="CENTER" spacing="5">
                    <Label styleClass="form-title" text="Đăng ký">
                        <font>
                            <Font name="System Bold" size="32.0" />
                        </font>
                    </Label>
                    <Label styleClass="form-subtitle" text="Tạo tài khoản mới">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                </VBox>

                <Region prefHeight="5" />

                <!-- Error Label -->
                <Label fx:id="errorLabel" managed="false" maxWidth="350.0" styleClass="error-label" visible="false" wrapText="true" />

                <!-- Username Field -->
                <VBox maxWidth="350.0" spacing="8">
                    <Label styleClass="field-label" text="Tên đăng nhập *" />
                    <TextField fx:id="usernameField" prefHeight="40.0" promptText="3-20 ký tự, chữ cái, số và _" styleClass="custom-textfield" />
                    <Label styleClass="hint-label" text="Chỉ được chứa chữ cái, số và dấu gạch dưới" />
                </VBox>

                <!-- Email Field -->
                <VBox maxWidth="350.0" spacing="8">
                    <Label styleClass="field-label" text="Email *" />
                    <TextField fx:id="emailField" prefHeight="40.0" promptText="example@email.com" styleClass="custom-textfield" />
                </VBox>

                <!-- Password Field -->
                <VBox maxWidth="350.0" spacing="8">
                    <Label styleClass="field-label" text="Mật khẩu *" />
                    <PasswordField fx:id="passwordField" prefHeight="40.0" promptText="Tối thiểu 6 ký tự" styleClass="custom-textfield" />

                    <!-- Password Strength Indicator -->
                    <VBox spacing="5">
                        <Label fx:id="passwordStrengthLabel" styleClass="strength-label" />
                        <ProgressBar fx:id="passwordStrengthBar" prefHeight="5.0" prefWidth="350.0" />
                    </VBox>
                </VBox>

                <!-- Confirm Password Field -->
                <VBox maxWidth="350.0" spacing="8">
                    <Label styleClass="field-label" text="Xác nhận mật khẩu *" />
                    <PasswordField fx:id="confirmPasswordField" prefHeight="40.0" promptText="Nhập lại mật khẩu" styleClass="custom-textfield" />
                </VBox>

                <!-- Terms Checkbox -->
                <HBox alignment="CENTER_LEFT" maxWidth="350.0" spacing="10">
                    <CheckBox fx:id="termsCheckbox" styleClass="terms-checkbox" />
                    <Label styleClass="secondary-text" text="Tôi đồng ý với " />
                    <Hyperlink styleClass="link" text="Điều khoản sử dụng" />
                </HBox>

                <!-- Register Button -->
                <VBox alignment="CENTER" maxWidth="350.0" spacing="10">
                    <Button fx:id="registerButton" maxWidth="Infinity" onAction="#handleRegister" prefHeight="45.0" styleClass="primary-button" text="Đăng ký" />
                    <ProgressIndicator fx:id="loadingIndicator" managed="false" prefHeight="30.0" prefWidth="30.0" visible="false" />
                </VBox>

                <!-- Login Link -->
                <HBox alignment="CENTER" spacing="5">
                    <Label styleClass="secondary-text" text="Đã có tài khoản?" />
                    <Hyperlink fx:id="loginLink" onAction="#handleBackToLogin" styleClass="link-bold" text="Đăng nhập" />
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
